<Window x:Class="Knucklebones.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Knucklebones"
        mc:Ignorable="d"
        Title="Knucklebones" Height="800" Width="800">
    <Canvas>
        <Grid Height="300" Width="300" Canvas.Left="250" Canvas.Top="50">
            <!--Player Top = 1-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
            <Image Grid.Column="0" Grid.Row="0" Name="_1_00" MouseDown="Field_MouseDown" Margin="10, 10" Height="80" Width="80" Source="\Images\Dice\Four_Dice.png">
                <Image.OpacityMask>
                    <ImageBrush/>
                </Image.OpacityMask>
            </Image>
            <Image Grid.Column="1" Grid.Row="0" Name="_1_10" MouseDown="Field_MouseDown" Margin="10, 10" Height="80" Width="80"/>
        <Image Grid.Column="2" Grid.Row="0" Name="_1_20" MouseDown="Field_MouseDown" Margin="10, 10" Height="80" Width="80"/>
        <Image Grid.Column="0" Grid.Row="1" Name="_1_01" MouseDown="Field_MouseDown" Margin="10, 10" Height="80" Width="80"/>
        <Image Grid.Column="1" Grid.Row="1" Name="_1_11" MouseDown="Field_MouseDown" Margin="10, 10" Height="80" Width="80"/>
        <Image Grid.Column="2" Grid.Row="1" Name="_1_21" MouseDown="Field_MouseDown" Margin="10, 10" Height="80" Width="80"/>
        <Image Grid.Column="0" Grid.Row="2" Name="_1_02" MouseDown="Field_MouseDown" Margin="10, 10" Height="80" Width="80"/>
        <Image Grid.Column="1" Grid.Row="2" Name="_1_12" MouseDown="Field_MouseDown" Margin="10, 10" Height="80" Width="80"/>
        <Image Grid.Column="2" Grid.Row="2" Name="_1_22" MouseDown="Field_MouseDown" Margin="10, 10" Height="80" Width="80"/>
        </Grid>
        <Grid Height="300" Width="300" Canvas.Left="250" Canvas.Bottom="50">
            <!--Player Buttom = 0-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="100" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>
            <Image Grid.Column="0" Grid.Row="0" Name="_0_00" MouseDown="Field_MouseDown" Margin="10, 10" Height="80" Width="80" Source="/Images/Dice/Five_Dice.png"/>
            <Image Grid.Column="1" Grid.Row="0" Name="_0_10" MouseDown="Field_MouseDown" Margin="10, 10" Height="80" Width="80"/>
            <Image Grid.Column="2" Grid.Row="0" Name="_0_20" MouseDown="Field_MouseDown" Margin="10, 10" Height="80" Width="80"/>
            <Image Grid.Column="0" Grid.Row="1" Name="_0_01" MouseDown="Field_MouseDown" Margin="10, 10" Height="80" Width="80"/>
            <Image Grid.Column="1" Grid.Row="1" Name="_0_11" MouseDown="Field_MouseDown" Margin="10, 10" Height="80" Width="80"/>
            <Image Grid.Column="2" Grid.Row="1" Name="_0_21" MouseDown="Field_MouseDown" Margin="10, 10" Height="80" Width="80"/>
            <Image Grid.Column="0" Grid.Row="2" Name="_0_02" MouseDown="Field_MouseDown" Margin="10, 10" Height="80" Width="80"/>
            <Image Grid.Column="1" Grid.Row="2" Name="_0_12" MouseDown="Field_MouseDown" Margin="10, 10" Height="80" Width="80"/>
            <Image Grid.Column="2" Grid.Row="2" Name="_0_22" MouseDown="Field_MouseDown" Margin="10, 10" Height="80" Width="80"/>
        </Grid>
        <Image Canvas.Left="30" Canvas.Bottom="100" Name="_0_Container" MouseDown="Field_MouseDown" Height="80" Width="80"/>
        <Image Canvas.Left="30" Canvas.Bottom="50" Name="_0_Btn" MouseDown="Field_MouseDown" Height="40" Width="80" Source="\Images\Buttons\Roll_Green.png"/>
        <Image Canvas.Right="30" Canvas.Top="100" Name="_1_Container" MouseDown="Field_MouseDown" Height="80" Width="80"/>
        <Image Canvas.Right="30" Canvas.Top="50" Name="_1_Btn" MouseDown="Field_MouseDown" Height="40" Width="80" Source="\Images\Buttons\Roll_Red.png"/>
        <Button Content="Button" Canvas.Left="30" Canvas.Top="160"/>
    </Canvas>
</Window>
